%div= link_to 'Home', root_path

- if !user_signed_in?
  - if controller_name == 'sessions'
    %div= link_to 'Sign Up', new_user_registration_path
  - else
    %div= link_to 'Sign In', new_user_session_path
- else
  %div<
    %div #{current_user.email_was}
    - if !current_user.confirmed? && !current_user.pending_reconfirmation?
      %div (awaiting confirmation)
  %div= link_to 'Change Email', edit_user_email_path
  %div= link_to 'Change Password', edit_user_password_path
  %div= link_to 'Sign Out', destroy_user_session_path, method: :delete

- content_for(:title) { 'Edit user' }

= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f|
  %div<
    %div= f.label :email
    %div= f.email_field :email
    %div= get_error_message_for(resource, :email)

  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div Currently waiting confirmation for: #{resource.unconfirmed_email}

  %div<
    %div= f.label :password
    %div= f.password_field :password, autocomplete: 'off', placeholder: 'At least 6 characters'
    %div= get_error_message_for(resource, :password)

  %div<
    %div= f.label :password_confirmation
    %div= f.password_field :password_confirmation, autocomplete: 'off'
    %div= get_error_message_for(resource, :password_confirmation)

  %div<
    %div= f.label :current_password
    %div= f.password_field :current_password, autocomplete: 'off'
    %div= get_error_message_for(resource, :current_password)

  %div= f.submit 'Update User'

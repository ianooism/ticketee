- content_for(:title) { 'Sign up' }

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  %div<
    %div= f.label :email
    %div= f.email_field :email
    %div= get_error_message_for(resource, :email)

  %div<
    %div= f.label :password
    %div= f.password_field :password, autocomplete: 'off', placeholder: 'At least 6 characters'
    %div= get_error_message_for(resource, :password)
    
  %div<
    %div= f.label :password_confirmation
    %div= f.password_field :password_confirmation, autocomplete: 'off'
    %div= get_error_message_for(resource, :password_confirmation)

  %div= f.submit 'Sign Up'

- content_for(:title) { 'Change email' }

= form_for(@user, url: {action: 'update'}) do |f|
  %div<
    %div= f.label :email
    %div= f.email_field :email
    %div= get_error_message_for(@user, :email)
  %div<
    %div= f.label :current_password
    %div= f.password_field :current_password, autocomplete: 'off'
    %div= get_error_message_for(@user, :current_password)
  %div= f.submit 'Update email'
